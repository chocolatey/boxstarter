    <id>Boxstarter</id>
    <version>$version$</version>
    <authors>Matt Wrock</authors>
    <owners>Matt Wrock</owners>
    <iconUrl>https://raw.githubusercontent.com/mwrock/boxstarter/master/Web/Images/boxLogo_sm.png</iconUrl>
    <title>Boxstarter</title>
